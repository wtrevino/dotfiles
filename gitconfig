[alias]
	l = log --pretty=oneline -n 20 --graph --abbrev-commit
	s = status -sb
	# Show the diff between the latest commit and the current state
	d = !"git diff-index --quiet HEAD -- || clear; git --no-pager diff --patch-with-stat"
	co = checkout
	br = branch
	ci = commit
	st = status
	ca = !git add -A && git commit -av  # commit all changes
	pullc = "!git pull origin \"$(git rev-parse --abbrev-ref HEAD)\""
	pushc = "!git push origin \"$(git rev-parse --abbrev-ref HEAD)\""
	pushcf = "!git push -f origin \"$(git rev-parse --abbrev-ref HEAD)\""
	ignore = update-index --skip-worktree
	unignore = update-index --no-skip-worktree
	ignored = !git ls-files -v | grep \"^S\"
	aliases = config --get-regexp alias
	contributors = shortlog --summary --numbered
	whoami = config user.email
	tags = tag -l
	branches = branch -a
	remotes = remote -v

[core]
	excludesfile = ~/.gitignore_global

[color]
	ui = auto

[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green

[color "diff"]
	meta = yellow bold
	frag = white bold
	old = red bold
	new = green bold

[color "status"]
	added = yellow bold
	changed = green bold
	untracked = red bold
